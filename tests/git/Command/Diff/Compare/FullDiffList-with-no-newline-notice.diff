+     *
+     * @param string $to
+     * @return \SebastianFeldmann\Git\Diff\File[]
+     */
+    public function compareTo(string $to = 'HEAD'): iterable
+    {
+        $compare = (new Compare($this->repo->getRoot()))->to($to)
